# Environment configuration for Web Notes backend

# Database Configuration
DATABASE_URL="postgresql+asyncpg://postgres:abcd@localhost:5432/webnotes"

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Server Configuration
HOST=localhost
PORT=8080
DEBUG=True

# CORS Configuration
# Dev uses explicit origins for localhost and chrome extensions
ALLOWED_ORIGINS='["http://localhost:3000", "http://localhost:8080", "chrome-extension://*"]'

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
