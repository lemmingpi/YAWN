{
  "manifest_version": 3,
  "name": "YAWN - Yet Another Web Notes App",
  "version": "1.0.1",
  "description": "Add sticky notes to any webpage. Rich text editing, markdown support, cloud sync, and sharing. Your notes follow you everywhere.",
  "homepage_url": "https://yawn-api-1040678620671.us-central1.run.app/privacy",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "contextMenus",
    "identity",
    "webNavigation"
  ],
  "host_permissions": [
    "https://yawn-api-1040678620671.us-central1.run.app/*",
    "https://localhost/*"
  ],
  "optional_host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Notes"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "oauth2": {
    "client_id": "1040678620671-oe3ka3cuk6v5hm9s62hibhgtf983ktoo.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  }
}
